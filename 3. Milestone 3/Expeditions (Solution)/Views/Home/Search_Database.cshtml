@model IEnumerable<Expeditions.Models.Peak>

@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Search Mountains/Peaks Page</title>

    
</head>
<body style="background-repeat: no-repeat; background-size: cover; background-image: url('https://images.pexels.com/photos/3971983/pexels-photo-3971983.jpeg?cs=srgb&dl=pexels-elina-sazonova-3971983.jpg&fm=jpg'); ">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" asp-action="Search_Database">Home</a>
    </nav>

    <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light ">
        <form id="search" asp-action="Search_Database" method="get">
            <div>
                <p>
                    Search for Peak and Expeditions: <input type="text" name="id" value="@ViewBag.CurrentFilter" />
                    <input type="submit" value="Search" class="btn btn-primary" onclick="ShowID()" />
                    <a asp-action="Search_Database" name="id=null">Remove Filter</a>
                </p>
                <div id="alert-msg" style="visibility: hidden;">
                    <p>Make sure we can</p>
                </div>
            </div>
        </form>

        <form asp-action="Search_Database" method="get">
            <table class="table table-bordered table-striped table-sm">
                @foreach (Expeditions.Models.Peak a in Model)
                {
    <tr>
        <td>
            <img src="https://via.placeholder.com/75" />
        </td>
        <td>
            <a href="/Home/Search_Database?id=@a.Expeditions">@a.Name</a>
        </td>
    </tr>}
            </table>
        </form>

    </div>
</body>
</html>