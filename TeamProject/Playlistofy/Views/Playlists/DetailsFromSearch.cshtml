@*This page is for the details of the Playlist from the search page*@
@model Playlistofy.Models.ViewModel.TracksForPlaylist

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Playlist.Name)</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Playlist.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Playlist.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Playlist.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Playlist.Description)
        </dd>
        <dt class="col-sm-2">
            Is @Html.DisplayNameFor(model => model.Playlist.Public)?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Playlist.Public)
        </dd>
        <dt class="col-sm-2">
            Is @Html.DisplayNameFor(model => model.Playlist.Collaborative)?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Playlist.Collaborative)
        </dd>
        <dt class="col-sm-2">
            Playlist Creator
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Playlist.User.DisplayName)
        </dd>
        <dt class=" col-sm-2">
            Tracks
        </dt>
        <dd class=" col-sm 10">
            <table>
                <tr>
                    <th>Title</th>
                    <th>Length</th>
                    @*<th>URL</th>*@
                </tr>
                @foreach (var track in Model.Tracks)
                {
                    <tr>
                        <td>
                            <a asp-controller="Tracks" asp-action="Details" asp-route-id="@track.Id">
                                @track.Name
                            </a>
                        </td>
                        <td>
                            @track.Duration
                        </td>
                        <td>
                            <a asp-controller="Tracks" asp-action="Delete" asp-route-TrackId="@track.Id" asp-route-PlaylistId="@Model.Playlist.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>