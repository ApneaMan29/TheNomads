@model Playlistofy.Models.userPlaylistsTracks

@{
    ViewData["Title"] = "UserPlaylists";
}

<center><h1>Upload Spotify Playlists To Personal Account</h1></center>

<!--<p>
    <a asp-action="Create">Create New</a>
</p>-->
<div class="main-body">
    <div class="row gutters-sm">
        <div class="col-sm-6 mb-3">
            <div class="container">
                <div class="main-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlaylistsDB.ElementAt(0).Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlaylistsDB.ElementAt(0).Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PlaylistsDB)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.DisplayName)
                                </td>
                                <td>
                                    <!--<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |-->
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <!--<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>-->
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <center>
                        <h4>Upload Spotify Playlists</h4>
                        <br />
                        <table class="table table-bordered table-striped table-sm">
                            @foreach (var playlist in Model.Playlists)
                            {
                                <tr>
                                    <td>
                                        <img src="https://via.placeholder.com/75" />
                                    </td>
                                    <td>
                                        <center>
                                            <a href=@("https://open.spotify.com/playlist/" + playlist.Id)>
                                                <h5>@playlist.Name</h5>
                                            </a>
                                        </center>
                                    </td>
                                    <td>
                                        <center>
                                            @*<h5>@playlist.trackCount</h5>*@
                                        </center>
                                    </td>
                                </tr>
                            }
                        </table>
                    </center>
                </div>
            </div>
        </div>
    </div>
</div>