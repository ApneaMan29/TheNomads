@model Playlistofy.Models.userPlaylistsTracks

@{
    ViewData["Title"] = "UserPlaylists";
}

<center><h1>Upload Spotify Playlists To Personal Account</h1></center>

<!--<p>
    <a asp-action="Create">Create New</a>
</p>-->
<div class="main-body">
    <div class="row gutters-sm">
        <div class="col-sm-6 mb-3">
            <div class="container">
                <div class="main-body">
                    <center><h4><a asp-controller="Playlists" asp-action="Create">Create Playlist</a></h4></center>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlaylistsDB.ElementAt(0).Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PlaylistsDB.ElementAt(0).Name)
                                </th>
                                @* <th>
                                    @Html.DisplayNameFor(model => model.User)
                                </th> *@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PlaylistsDB)
                            {
                            <tr>
                                <td>
                                    <a asp-action="DetailsFromSearch" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                @* <td>
                                    @Html.DisplayFor(modelItem => item.User.DisplayName)
                                </td> *@
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    @*@<a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                                <td>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <center>
                        <h4>Upload Spotify Playlists</h4>
                        <br />
                        <form asp-action="Create">
                            <table class="table table-bordered table-striped table-sm">
                                @foreach (var playlist in Model.Playlists)
                                {
                                <tr>
                                    <td>
                                        <img src="https://via.placeholder.com/75" />
                                    </td>
                                    <td>
                                        <center>
                                            <a href=@("https://open.spotify.com/playlist/" + playlist.Id)>
                                                <h5>@playlist.Name</h5>
                                            </a>
                                        </center>
                                    </td>
                                    @*
                                    <td>
                                        <center>
                                            <h5>@playlist.trackCount</h5>
                                        </center>
                                    </td>
                                    *@
                                    <td>
                                        <center>
                                            <a asp-action="UserPlaylists" asp-route-id="@playlist.Id">Add</a>
                                        </center>
                                    </td>
                                    @*<div class="form-group">
                                        <label asp-for="@playlist.Id" class="control-label"></label>
                                        <input asp-for="@playlist.Id" class="form-control" />
                                        <span asp-validation-for="@playlist.Id" class="text-danger"></span>
                                    </div>
                                    <input type="submit" value="Create" class="btn btn-primary" /> *@
                                </tr>
                                }
                            </table>
                        </form>
                    </center>
                </div>
            </div>
        </div>
    </div>
</div>