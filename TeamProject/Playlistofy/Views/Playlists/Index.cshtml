@model IEnumerable<Playlistofy.Models.Playlist>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!--<p>
    <a asp-action="Create">Create New</a>
</p>-->
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Href)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Public)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collaborative)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Href)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @if (item.User != null)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.User.DisplayName)
                </td>
            }
            <td>
                <!--<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |-->
                <a asp-action="DetailsFromSearch" asp-route-id="@item.Id">Details</a> |
                <!--<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>-->
            </td>
        </tr>
}
    </tbody>
</table>
