<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Playlist[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playlist[0].Href)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playlist[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playlist[0].Public)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playlist[0].Collaborative)
            </th>
