<body class="bg-main fontMain">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  bg-nav box-shadow">
            <div class="navbar-collapse collapse w-100 order-1 order-md-0">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SpotifyProfile">Spotify Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="AccountPage">Account</a>
                    </li>
                </ul>
            </div>
            <div class="mx-auto order-0">
                <a class="navbar-brand fontMain mx-auto" asp-area="" asp-controller="Home" asp-action="Index">Playlistofy</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse w-100 order-3">
                <partial name="_LoginPartial" />
            </div>




