@model IEnumerable<Playlistofy.Models.Track>

@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<head>
    <title>List of all Tracks</title>
    <link rel="stylesheet" href="\wwwroot\lib\bootstrap\dist\css\bootstrap.css" type="text/css" />
</head>

<body>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DurationMs)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiscNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TrackNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Explicit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsPlayable)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsLocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Href)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PreviewUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Uri)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Popularity)
                </th>
                <th>
                    <!--Html.DisplayNameFor(model => model.Playlist)-->
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DurationMs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrackNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Explicit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPlayable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsLocal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Href)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PreviewUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uri)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Popularity)
                </td>
                <td>
                    <!--Html.DisplayFor(modelItem => item.Playlist.Id)-->
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>

            }
        </tbody>
    </table>
</body>

