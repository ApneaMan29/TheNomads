                                <p class="text-secondary">Spotify ID - @Model.User.SpotifyUserId</p>
                                <button class="btn btn-primary">Followers - @Model.User.Followers</button>
                                <button class="btn btn-outline-primary">Message</button>
                            </div>
                        </div>
                    </div>
                </div>
