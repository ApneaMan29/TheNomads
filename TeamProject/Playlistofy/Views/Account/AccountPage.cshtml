                            <div class="card-body">
                                <center>
                                    <h4>Upload Spotify Playlists</h4>
                                    <br />
                                    <table class="table table-bordered table-striped table-sm">
                                        
                                            <tr>
                                                <td>
                                                    <img src="https://via.placeholder.com/75" />
                                                </td>
                                                <td>
                                                    <center>
                                                       Future playlists go here!
                                                    </center>
                                                </td>
                                                <td>
                                                    <center>
                                                        
                                                    </center>
                                                </td>
                                            </tr>
                                        
                                    </table>
                                </center>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <center>
                                    <h4>Upload Spotify Playlists</h4>
                                    <br />
                                    <table class="table table-bordered table-striped table-sm">
                                        @foreach (var playlist in Model.Playlists)
                                        {
                                            <tr>
                                                <td>
                                                    <img src="https://via.placeholder.com/75" />
                                                </td>
                                                <td>
                                                    <center>
                                                        <a href=@("https://open.spotify.com/playlist/" + playlist.Id)>
                                                            <h5>@playlist.Name</h5>
                                                        </a>
                                                    </center>
                                                </td>
                                                <td>
                                                    <center>
                                                        <h5>@playlist.trackCount</h5>
                                                    </center>
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                </center>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


